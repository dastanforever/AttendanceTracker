<Page
    x:Class="AttendancePrototype1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttendancePrototype1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EdgeUIThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Disclaimer" VerticalAlignment="Top" FontSize="32" Width="152" Height="30" Foreground="#FFF7F2F2" FontFamily="{StaticResource PhoneFontFamilyLight}" />
        <TextBlock HorizontalAlignment="Center" Margin="625,105,616,0" TextWrapping="Wrap" Text="Warning!" VerticalAlignment="Top" FontSize="26.667" Width="125" />
        <TextBlock HorizontalAlignment="Center" Margin="23,137,10,0" TextWrapping="WrapWholeWords" VerticalAlignment="Top" FontFamily="Calibri Light" FontSize="21.333" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" MinWidth="2" Width="367" Height="297">
    		<Run Text="Although this app helps you to track your attendance. It may not help you to prevent you from ATTENDANCE BACK. It is highly recommended to not solely depend on this app for your attendance."/>
    		<LineBreak/>
    		<Run/>
    		<LineBreak/>
    		<Run Text="Even we don't do so.. :P"/>
        </TextBlock>
        <Button x:ConnectionId='1' Content="Accept and Continue" HorizontalAlignment="Center"  Height="66" Width="313" FontSize="26.667"  VerticalAlignment="Bottom" Margin="0,0,0,86"                     />
    </Grid>
</Page>

